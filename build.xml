<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="VELHOWM" basedir="." default="use">
	<description>Group #1 Project: VELHO Warehouse Management</description>
	<property name="target" value="1.8"/>
	<property name="source" value="1.8"/>
	<property name="src" location="src"/>
	<property name="classes" location="bin"/>
	<property name="main-class" value="velho.view.MainWindow"/>

	<path id="velho.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/h2-1.4.191.jar"/>
        <pathelement location="lib/apache-log4j-1.2.17/log4j-1.2.17.jar"/>
        <pathelement location="lib/eclipse/*"/>
		<pathelement location="lib/hibernate/java8/*"/>
        <pathelement location="lib/hibernate/jpa/*"/>
        <pathelement location="lib/hibernate/required/*"/>
    </path>

	<target name="init" description="make the classes folder">
		<tstamp/>
		<mkdir dir="${classes}"/>
	</target>

	<target name="compile" depends="init" description="compile the source">
		<javac source="${source}" destdir="${classes}" target="${target}" includeantruntime="false">
            <src path="${src}"/>
            <classpath refid="velho.classpath"/>
        </javac>
	</target>

	<target name="jar" depends="compile" description="make the jar">
		<jar destfile="VelhoWM_${DSTAMP}.jar" basedir="${classes}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>
		</jar>
	</target>

	<target name="use" depends="jar" description="use the task">
		<java classname="${main-class}" fork="true">
		  <classpath>
		    <path refid="velho.classpath"/>
		  </classpath>
		</java>
	</target>
</project>
